    def _restart_application(self):
        """–ü–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞–µ—Ç –ø—Ä–∏–ª–æ–∂–µ–Ω–∏–µ."""

# –ò–∑–º–µ–Ω–µ–Ω–∏–µ –ª–æ–≥–∏–∫–∏ –º–æ–∂–µ—Ç –ø—Ä–∏–≤–µ—Å—Ç–∏ –∫ –ø–æ–ª–æ–º–∫–µ UI –∏ –Ω–∞—Ä—É—à–µ–Ω–∏—é —Ä–∞–±–æ—Ç—ã –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è

        print("Restarting application...")
        # –°–æ—Ö—Ä–∞–Ω—è–µ–º —Ç–µ–∫—É—â–µ–µ —Å–æ—Å—Ç–æ—è–Ω–∏–µ
        self.settings.sync()

        # –§–æ—Ä–º–∏—Ä—É–µ–º –∫–æ–º–∞–Ω–¥—É –¥–ª—è –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞
        # –ò—Å–ø–æ–ª—å–∑—É–µ–º sys.executable –¥–ª—è –ø–æ–ª—É—á–µ–Ω–∏—è –ø—É—Ç–∏ –∫ Python
        python = sys.executable
        script_path = os.path.abspath(sys.argv[0])

        # –ó–∞–ø—É—Å–∫–∞–µ–º –Ω–æ–≤—ã–π –ø—Ä–æ—Ü–µ—Å—Å —Å —Ç–µ–º –∂–µ Python –∏ —Å–∫—Ä–∏–ø—Ç–æ–º
        args = [python, script_path]
        if len(sys.argv) > 1:
            args.extend(sys.argv[1:])

        print(f"Executing: {' '.join(args)}")
        subprocess.Popen(args)

        # –ó–∞–≤–µ—Ä—à–∞–µ–º —Ç–µ–∫—É—â–∏–π –ø—Ä–æ—Ü–µ—Å—Å
        sys.exit(0)


    # –ò–∑–º–µ–Ω–µ–Ω–∏–µ –ª–æ–≥–∏–∫–∏ –º–æ–∂–µ—Ç –ø—Ä–∏–≤–µ—Å—Ç–∏ –∫ –ø–æ–ª–æ–º–∫–µ UI –∏ –Ω–∞—Ä—É—à–µ–Ω–∏—é —Ä–∞–±–æ—Ç—ã –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è

    def _toggle_theme(self, is_dark=None):
        """–ü–µ—Ä–µ–∫–ª—é—á–∞–µ—Ç —Ç–µ–º—É –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è –º–µ–∂–¥—É —Å–≤–µ—Ç–ª–æ–π –∏ —Ç–µ–º–Ω–æ–π."""
        print(f"_toggle_theme called with is_dark={is_dark}, current is_dark_theme={self.is_dark_theme}")

        # –ï—Å–ª–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä - —ç—Ç–æ QAction
        if isinstance(is_dark, QAction):
            # –ü–æ–ª—É—á–∞–µ–º –∑–Ω–∞—á–µ–Ω–∏–µ –∏–∑ –¥–∞–Ω–Ω—ã—Ö –¥–µ–π—Å—Ç–≤–∏—è
            is_dark = is_dark.data()
            print(f"Extracted is_dark from QAction data: {is_dark}")
        # –ï—Å–ª–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä –Ω–µ –∑–∞–¥–∞–Ω, –∏–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º —Ç–µ–∫—É—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ
        elif is_dark is None:
            is_dark = not self.is_dark_theme
            print(f"Inverting current theme: is_dark={is_dark}")

        # –ü—Ä–æ–≤–µ—Ä—è–µ–º, –∏–∑–º–µ–Ω–∏–ª–∞—Å—å –ª–∏ —Ç–µ–º–∞ –Ω–∞ —Å–∞–º–æ–º –¥–µ–ª–µ
        if bool(self.is_dark_theme) == bool(is_dark):
            print(f"Theme unchanged, skipping toggle. is_dark={is_dark}, is_dark_theme={self.is_dark_theme}")
            return

        # –î–µ–ª–µ–≥–∏—Ä—É–µ–º –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ –≤ –º–µ—Ç–æ–¥ —Å –ø–ª–∞–≤–Ω–æ–π –∞–Ω–∏–º–∞—Ü–∏–µ–π
        self._toggle_theme_smooth(is_dark)

        # –û–±–Ω–æ–≤–ª—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ –¥–µ–π—Å—Ç–≤–∏–π –≤ –º–µ–Ω—é
        if hasattr(self, 'dark_theme_action') and hasattr(self, 'light_theme_action'):
            self.dark_theme_action.setChecked(self.is_dark_theme)
            self.light_theme_action.setChecked(not self.is_dark_theme)
            print(f"Updated menu actions: dark={self.is_dark_theme}, light={not self.is_dark_theme}")

    def _toggle_theme_smooth(self, is_dark=None):
        """–ü–ª–∞–≤–Ω–æ–µ –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏–µ —Ç–µ–º—ã –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—è —Å –∞–Ω–∏–º–∞—Ü–∏–µ–π."""
        print(f"_toggle_theme_smooth called with is_dark={is_dark}")

        # –û–ø—Ä–µ–¥–µ–ª—è–µ–º –Ω–∞—á–∞–ª—å–Ω–æ–µ –∏ –∫–æ–Ω–µ—á–Ω–æ–µ –∑–Ω–∞—á–µ–Ω–∏–µ –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏
        if isinstance(is_dark, QAction):
            is_dark = is_dark.data()

        # –ï—Å–ª–∏ –ø–∞—Ä–∞–º–µ—Ç—Ä –Ω–µ –∑–∞–¥–∞–Ω, –∏–Ω–≤–µ—Ä—Ç–∏—Ä—É–µ–º —Ç–µ–∫—É—â–µ–µ –∑–Ω–∞—á–µ–Ω–∏–µ
        if is_dark is None:
            is_dark = not self.is_dark_theme

        # –ü—Ä–æ–≤–µ—Ä—è–µ–º, –∏–∑–º–µ–Ω–∏–ª–∞—Å—å –ª–∏ —Ç–µ–º–∞ –Ω–∞ —Å–∞–º–æ–º –¥–µ–ª–µ
        if bool(self.is_dark_theme) == bool(is_dark):
            print(f"Theme not actually changed: current={self.is_dark_theme}, requested={is_dark}")
            return

        # –û–±–Ω–æ–≤–ª—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ
        self.is_dark_theme = is_dark

        # –û–ø—Ä–µ–¥–µ–ª—è–µ–º –Ω–∞—á–∞–ª—å–Ω—ã–π –∏ –∫–æ–Ω–µ—á–Ω—ã–π —Ü–≤–µ—Ç
        start_bg = QColor('#121212' if self.is_dark_theme else '#f5f5f5')
        end_bg = QColor('#f5f5f5' if self.is_dark_theme else '#121212')

        start_text = QColor('#ffffff' if self.is_dark_theme else '#000000')
        end_text = QColor('#000000' if self.is_dark_theme else '#ffffff')

        # –°–æ–∑–¥–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é —Ü–≤–µ—Ç–æ–≤–æ–≥–æ –ø–µ—Ä–µ—Ö–æ–¥–∞
        self.theme_animation = QVariantAnimation()
        self.theme_animation.setDuration(300)  # 300 –º—Å –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏
        self.theme_animation.setStartValue(0.0)
        self.theme_animation.setEndValue(1.0)

        # –û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∏–∑–º–µ–Ω–µ–Ω–∏—è –∑–Ω–∞—á–µ–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏
        def update_colors(progress):
            # –ò–Ω—Ç–µ—Ä–ø–æ–ª–∏—Ä—É–µ–º —Ü–≤–µ—Ç–∞
            current_bg = QColor(
                int(start_bg.red() + (end_bg.red() - start_bg.red()) * progress),
                int(start_bg.green() + (end_bg.green() - start_bg.green()) * progress),
                int(start_bg.blue() + (end_bg.blue() - start_bg.blue()) * progress)
            )

            current_text = QColor(
                int(start_text.red() + (end_text.red() - start_text.red()) * progress),
                int(start_text.green() + (end_text.green() - start_text.green()) * progress),
                int(start_text.blue() + (end_text.blue() - start_text.blue()) * progress)
            )

            # –ü—Ä–∏–º–µ–Ω—è–µ–º –ø—Ä–æ–º–µ–∂—É—Ç–æ—á–Ω—ã–π —Å—Ç–∏–ª—å
            self._apply_theme(self.is_dark_theme, current_bg, current_text)

        # –ü–æ–¥–∫–ª—é—á–∞–µ–º –æ–±—Ä–∞–±–æ—Ç—á–∏–∫
        self.theme_animation.valueChanged.connect(update_colors)

        # –ü—Ä–∏ –∑–∞–≤–µ—Ä—à–µ–Ω–∏–∏ –∞–Ω–∏–º–∞—Ü–∏–∏ –ø—Ä–∏–º–µ–Ω—è–µ–º —Ñ–∏–Ω–∞–ª—å–Ω—ã–π —Å—Ç–∏–ª—å
        def animation_finished():
            # –ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ –∑–∞–≥—Ä—É–∂–∞–µ–º –ø–æ–ª–Ω—ã–π —Å—Ç–∏–ª—å –ø–æ—Å–ª–µ –∑–∞–≤–µ—Ä—à–µ–Ω–∏—è –∞–Ω–∏–º–∞—Ü–∏–∏
            self._load_styles(force_reload=True)
            self._update_view_menu()  # –û–±–Ω–æ–≤–ª—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ –º–µ–Ω—é View

            # –û–±–Ω–æ–≤–ª—è–µ–º –∏–∫–æ–Ω–∫–∏ –∏ —Ü–≤–µ—Ç–∞ –≤ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–µ
            self._force_style_reload()

            # –°–æ—Ö—Ä–∞–Ω—è–µ–º –Ω–∞—Å—Ç—Ä–æ–π–∫—É —Ç–µ–º—ã, –µ—Å–ª–∏ –µ—Å—Ç—å –¥–æ—Å—Ç—É–ø –∫ –Ω–∞—Å—Ç—Ä–æ–π–∫–∞–º
            if hasattr(self, 'settings'):
                self.settings.setValue("theme/is_dark", self.is_dark_theme)
                self.settings.sync()

            # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—à–Ω–æ–π —Å–º–µ–Ω–µ —Ç–µ–º—ã
            theme_name = "Dark" if self.is_dark_theme else "Light"
            self.status_label.setText(self._translate(
                "status.theme_changed",
                f"Theme changed to {theme_name}"
            ))

        self.theme_animation.finished.connect(animation_finished)

        # –ó–∞–ø—É—Å–∫–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é
        self.theme_animation.start()

    def _apply_theme(self, is_dark, bg_color, text_color):
        """–ü—Ä–∏–º–µ–Ω—è–µ—Ç —Ç–µ–º—É —Å —É–∫–∞–∑–∞–Ω–Ω—ã–º–∏ —Ü–≤–µ—Ç–∞–º–∏ –¥–ª—è –∞–Ω–∏–º–∞—Ü–∏–∏.

        Args:
            is_dark (bool): –Ø–≤–ª—è–µ—Ç—Å—è –ª–∏ —Ç–µ–º–∞ —Ç–µ–º–Ω–æ–π
            bg_color (QColor): –¶–≤–µ—Ç —Ñ–æ–Ω–∞
            text_color (QColor): –¶–≤–µ—Ç —Ç–µ–∫—Å—Ç–∞
        """
        # –ü—Ä–µ–æ–±—Ä–∞–∑—É–µ–º —Ü–≤–µ—Ç–∞ –≤ —Å—Ç—Ä–æ–∫–æ–≤—ã–π —Ñ–æ—Ä–º–∞—Ç –¥–ª—è CSS
        bg_color_str = f"rgb({bg_color.red()}, {bg_color.green()}, {bg_color.blue()})"
        text_color_str = f"rgb({text_color.red()}, {text_color.green()}, {text_color.blue()})"

        # –û—Å–Ω–æ–≤–Ω–æ–π —Å—Ç–∏–ª—å —Å –ø–µ—Ä–µ—Ö–æ–¥–Ω—ã–º–∏ —Ü–≤–µ—Ç–∞–º–∏
        transition_style = f"""
        QMainWindow, QDialog, QWidget {{
            background-color: {bg_color_str};
            color: {text_color_str};
        }}

        QMenuBar, QMenu, QStatusBar {{
            background-color: {bg_color_str};
            color: {text_color_str};
        }}

        QTabWidget::pane {{
            border: 1px solid rgba({text_color.red()}, {text_color.green()}, {text_color.blue()}, 50);
            background-color: {bg_color_str};
        }}

        QTabBar::tab {{
            background-color: rgba({text_color.red()}, {text_color.green()}, {text_color.blue()}, 10);
            color: {text_color_str};
            padding: 6px 12px;
            margin-right: 2px;
            border-top-left-radius: 4px;
            border-top-right-radius: 4px;
        }}

        QTabBar::tab:selected {{
            background-color: rgba({text_color.red()}, {text_color.green()}, {text_color.blue()}, 20);
            border-bottom: 2px solid rgba({text_color.red()}, {text_color.green()}, {text_color.blue()}, 150);
        }}
        """

        # –ü—Ä–∏–º–µ–Ω—è–µ–º —Å—Ç–∏–ª—å –∫ –ø—Ä–∏–ª–æ–∂–µ–Ω–∏—é
        QApplication.instance().setStyleSheet(transition_style)
        QApplication.processEvents()

    def _on_language_changed(self, action):
        """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ –∏–∑–º–µ–Ω–µ–Ω–∏—è —è–∑—ã–∫–∞."""
        language_code = action.data()
        if language_code and language_code != self.current_language:
            print(f"Attempting to change language from {self.current_language} to {language_code}")
            success = self._load_language(language_code)

            if success:
                # –û–±–Ω–æ–≤–ª—è–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å –±–µ–∑ –ø–µ—Ä–µ–∑–∞–ø—É—Å–∫–∞
                self._update_ui_translations()

                # –ü–µ—Ä–µ—Ä–∏—Å–æ–≤—ã–≤–∞–µ–º –≤—Å–µ –≤–∏–¥–∂–µ—Ç—ã –¥–ª—è –ø—Ä–∏–º–µ–Ω–µ–Ω–∏—è –ø–µ—Ä–µ–≤–æ–¥–æ–≤
                for widget in self.findChildren(QWidget):
                    widget.update()

                # –ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ –æ–±–Ω–æ–≤–ª—è–µ–º –≤—Å–µ –≤–∏–¥–∂–µ—Ç—ã
                QApplication.processEvents()

                # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—à–Ω–æ–π —Å–º–µ–Ω–µ —è–∑—ã–∫–∞
                success_message = self._translate("status.language_changed", f"Language changed to {language_code}")
                self.status_label.setText(success_message)
                print(f"Language successfully changed to: {language_code}")

                # –ü–µ—Ä–µ–∫–ª—é—á–∞–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ –¥–µ–π—Å—Ç–≤–∏–π –≤ –≥—Ä—É–ø–ø–µ –≤—ã–±–æ—Ä–∞ —è–∑—ã–∫–∞
                for act in self.language_action_group.actions():
                    act.setChecked(act.data() == language_code)
            else:
                # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —Å–æ–æ–±—â–µ–Ω–∏–µ –æ–± –æ—à–∏–±–∫–µ
                QMessageBox.warning(
                    self,
                    self._translate("settings.language_error", "Language Error"),
                    self._translate("settings.language_error_message",
                        f"Failed to change language to {language_code}")
                )
                print(f"Failed to change language to {language_code}")

    def _on_theme_changed(self, theme_name):
        """–û–±—Ä–∞–±–æ—Ç—á–∏–∫ —Å–∏–≥–Ω–∞–ª–∞ –∏–∑–º–µ–Ω–µ–Ω–∏—è —Ç–µ–º—ã."""
        # –ó–∞–≥—Ä—É–∂–∞–µ–º —Å—Ç–∏–ª–∏ –∏–∑ –Ω–æ–≤–æ–π —Ç–µ–º—ã
        self._load_styles(force_reload=True)

        # –û–±–Ω–æ–≤–ª—è–µ–º –ø–µ—Ä–µ–≤–æ–¥—ã –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
        self._update_ui_translations()

        # –û–±–Ω–æ–≤–ª—è–µ–º —Å–æ—Å—Ç–æ—è–Ω–∏–µ –º–µ–Ω—é
        self._update_view_menu()

        # –ü—Ä–∏–Ω—É–¥–∏—Ç–µ–ª—å–Ω–æ –æ–±–Ω–æ–≤–ª—è–µ–º —Å—Ç–∏–ª–∏
        self._force_style_reload()

        # –ü–æ–∫–∞–∑—ã–≤–∞–µ–º —É–≤–µ–¥–æ–º–ª–µ–Ω–∏–µ –æ–± —É—Å–ø–µ—à–Ω–æ–π —Å–º–µ–Ω–µ —Ç–µ–º—ã
        theme_display_name = theme_manager.get_theme_display_name(theme_name)
        self.status_label.setText(self._translate(
            "status.theme_changed",
            f"Theme changed to {theme_display_name}"
        ))
