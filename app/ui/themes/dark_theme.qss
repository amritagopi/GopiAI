/************************ General ************************/
QMainWindow {
    background-color: #000000; /* Темно-серый фон */
}

QWidget {
    background-color: #000000; /* Базовый серый фон */
    color: #E8E8E8; /* Светлый текст для контраста */
    border: none;
    font-family: "Inter", "Segoe UI", Arial, sans-serif;
    font-size: 10pt;
}

/************************ Dock Widgets ************************/
QDockWidget {
    titlebar-close-icon: none;
    titlebar-normal-icon: none;
    border: 1px solid rgba(249, 242, 195, 0.3); /* Золотистая граница */
    border-radius: 10px;
    margin: 3px;
}

QDockWidget::title {
    background-color: #32322F; /* Тёмный фон для заголовка */
    text-align: left;
    padding: 8px 12px;
    border-top-left-radius: 9px;
    border-top-right-radius: 9px;
    color: #FFF8DC; /* Тёплый светлый цвет для заголовков */
    font-weight: 500;
}

/* Эффект тени для док-виджетов */
QDockWidget {
    background-color: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                                      stop:0 #000000, stop:1 #222222);
}

/************************ Tab Widgets ************************/
QTabWidget::pane {
    border: 1px solid rgba(249, 242, 195, 0.3);
    background-color: #000000;
    border-radius: 10px;
    margin-top: 3px;
}

QTabBar::tab {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #121212, stop:1 #0A0A0A);
    color: #B8B8B8; /* Светло-серый текст */
    padding: 10px 14px;
    border: 1px solid rgba(249, 242, 195, 0.2);
    border-bottom: none;
    border-top-left-radius: 7px;
    border-top-right-radius: 7px;
    margin-right: 3px;
    margin-top: 3px;
}

QTabBar::tab:selected {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #1E3E3E, stop:1 #0A2A2A);
    color: #FFEDBC; /* Яркий золотистый текст для активной вкладки */
    border: 1px solid rgba(249, 242, 195, 0.5);
    border-bottom: 1px solid #3C3C3C;
    margin-top: 0px;
}

QTabBar::tab:hover {
    background-color: #454B43; /* Зеленоватый оттенок при наведении */
    padding-top: 12px;
    color: #FFFFFF;
}

QTabBar::close-button {
    image: url(data:image/svg+xml;base64,);
    width: 16px;
    height: 16px;
    subcontrol-position: right;
    subcontrol-origin: margin;
    margin: 2px;
}

QTabBar::close-button:hover {
    background-color: rgba(255, 85, 85, 0.3);
    border-radius: 4px;
}

/************************ Input/Output Widgets ************************/
QLineEdit, QTextEdit, QPlainTextEdit, QTextBrowser {
    background-color: #252526; /* Чуть темнее основного фона */
    color: #E6E6E6; /* Светлый текст */
    border: 2px solid;
    border-color: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #00F0C0, stop:0.5 #0090FF, stop:1 #00F0C0);
    border-radius: 8px;
    padding: 8px 10px;
    selection-background-color: rgba(80, 200, 189, 0.4); /* Бирюзовый для выделения */
}

QPlainTextEdit /* Для CodeEditor */ {
    font-family: "JetBrains Mono", "Consolas", "Courier New", monospace;
    line-height: 1.4;
}

QPushButton {
    background-color: #50C8BD; /* Бирюзовый цвет */
    color: #FFFFFF; /* Белый текст */
    border: none;
    padding: 10px 14px;
    min-width: 80px;
    border-radius: 8px;
    font-weight: 500;
    margin-bottom: 3px;
}

QPushButton:hover {
    background-color: #75D2BF; /* Светлее бирюзовый при наведении */
    border: 1px solid rgba(117, 194, 175, 0.5);
    margin: -1px;
    margin-bottom: 2px;
}

QPushButton:pressed {
    background-color: #48AA9C; /* Темнее бирюзовый при нажатии */
    margin-top: 2px;
    margin-bottom: 1px;
}

/************************ Tree View (Project Explorer) ************************/
QTreeView {
    background-color: #252527; /* Темнее фон для контраста */
    border: none;
    border-radius: 8px;
    alternate-background-color: #2A2A2D; /* Чередующийся фон */
    padding: 5px;
}

QTreeView::item {
    padding: 5px;
    margin: 2px 0px;
    border-radius: 5px;
}

QTreeView::item:hover {
    background-color: rgba(82, 116, 78, 0.7); /* Полупрозрачный зеленый */
    margin-left: 3px;
}

QTreeView::item:selected {
    background-color: #50C8BD; /* Яркий бирюзовый */
    color: #000000; /* Черный текст для контраста на ярком фоне */
    outline: none;
    border: none;
    border: 1px solid rgba(80, 200, 189, 0.5);
    margin: 1px;
}

QTreeView::item:selected:!active {
    background-color: rgba(80, 200, 189, 0.7);
    color: #000000;
    outline: none;
    border: none;
}

QHeaderView::section { /* Заголовок для TreeView */
    background-color: #32322F;
    color: #FFF8DC; /* Теплый светлый цвет для заголовков */
    padding: 8px;
    border: 1px solid rgba(249, 242, 195, 0.3);
    border-radius: 6px;
    font-weight: 500;
}

/************************ Scroll Bars ************************/
QScrollBar:vertical {
    border: none;
    background: rgba(249, 242, 195, 0.05);
    width: 12px;
    margin: 0px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #00F0C0, stop:0.5 #00C0F0, stop:1 #00F0C0);
    border-radius: 5px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #00FFF0, stop:0.5 #00F0FF, stop:1 #00FFF0);
}

QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    height: 0px;
    background: none;
}

QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    border: none;
    background: rgba(249, 242, 195, 0.05);
    height: 12px;
    margin: 0px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background: rgba(80, 200, 189, 0.7);
    min-width: 30px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background: #50C8BD;
}

QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    width: 0px;
    background: none;
}

QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}

/************************ Menu Bar & Status Bar ************************/
QMenuBar {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 #121212, stop:1 #0A0A0A);
    color: #00F0C0;
    border-bottom: 1px solid #00F0C0;
}

QMenuBar::item {
    background: transparent;
    padding: 8px 12px;
    border-radius: 5px;
    margin: 2px 3px;
}

QMenuBar::item:selected {
    background-color: rgba(82, 116, 78, 0.8); /* Зеленоватый оттенок */
    border: 1px solid rgba(82, 116, 78, 0.4);
}

QMenu {
    background-color: #2A2A2A;
    border: 1px solid rgba(249, 242, 195, 0.3);
    border-radius: 8px;
    padding: 5px;
    color: #E8E8E8;
}

QMenu::item {
    padding: 8px 25px 8px 22px;
    border-radius: 5px;
    margin: 3px 6px;
}

QMenu::item:selected {
    background-color: rgba(80, 200, 189, 0.3);
    color: #FFFFFF;
}

/* Статус бар */
QStatusBar {
    background-color: #232323;
    color: #B0B0B0;
    border-top: 1px solid rgba(249, 242, 195, 0.15);
    padding: 5px;
}

QStatusBar QLabel {
    padding: 3px 5px;
}

/* Добавляем стили для комбо-боксов */
QComboBox {
    background-color: #252526;
    color: #E0E0E0; /* Светлый текст */
    border: 1px solid rgba(123, 89, 54, 0.5);
    border-radius: 7px;
    padding: 5px 10px;
    min-width: 120px;
}

QComboBox:hover {
    border: 1px solid rgba(80, 200, 189, 0.7);
}

QComboBox::drop-down {
    subcontrol-origin: padding;
    subcontrol-position: center right;
    width: 20px;
    border-left: 1px solid rgba(123, 89, 54, 0.3);
}

QComboBox QAbstractItemView {
    background-color: #252526;
    border: 1px solid rgba(123, 89, 54, 0.5);
    border-radius: 7px;
    selection-background-color: rgba(80, 200, 189, 0.4);
    color: #E0E0E0; /* Светлый текст для выпадающего списка */
}

/* Стили для чекбоксов */
QCheckBox {
    spacing: 8px;
    color: #E0E0E0; /* Светлый текст */
}

QCheckBox::indicator {
    width: 18px;
    height: 18px;
    border-radius: 4px;
    border: 1px solid rgba(123, 89, 54, 0.6);
}

QCheckBox::indicator:unchecked {
    background-color: #252526;
}

QCheckBox::indicator:checked {
    background-color: #50C8BD;
}

QCheckBox::indicator:hover {
    border: 1px solid rgba(80, 200, 189, 0.7);
}

/* Стили для диалоговых окон */
QDialog {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #00805A, stop:0.5 #00A080, stop:1 #00805A);
    border-radius: 10px;
}

QDialog QPushButton {
    min-width: 90px;
}

/* Стили для сплиттера */
QSplitter::handle {
    background-color: rgba(249, 242, 195, 0.15);
}

QSplitter::handle:horizontal {
    width: 3px;
}

QSplitter::handle:vertical {
    height: 3px;
}

QSplitter::handle:hover {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #00F0C0, stop:0.5 #00C0F0, stop:1 #00F0C0);
}

/* Стили для радио-кнопок */
QRadioButton {
    spacing: 8px;
    color: #E0E0E0; /* Светлый текст */
}

QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border-radius: 8px;
    border: 1px solid rgba(123, 89, 54, 0.6);
}

QRadioButton::indicator:unchecked {
    background-color: #252526;
}

QRadioButton::indicator:checked {
    background-color: #252526;
    border: 1px solid #50C8BD;
}

QRadioButton::indicator:checked::before {
    background-color: #50C8BD;
    width: 10px;
    height: 10px;
    border-radius: 5px;
    margin: 3px;
}

QRadioButton::indicator:hover {
    border: 1px solid rgba(80, 200, 189, 0.7);
}

/* Стили для групп */
QGroupBox {
    background: qlineargradient(x1:0, y1:0, x2:0, y2:1,
                stop:0 rgba(10, 26, 26, 200), stop:1 rgba(5, 5, 5, 200));
    border: 1px solid rgba(249, 242, 195, 0.3);
    border-radius: 8px;
    margin-top: 20px;
    padding-top: 15px;
    padding: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 5px;
    color: #FFF8DC;
    font-weight: 500;
}

/* Стили для полос прогресса */
QProgressBar {
    border: 1px solid rgba(123, 89, 54, 0.6);
    border-radius: 5px;
    background-color: #252526;
    text-align: center;
    color: #FFFFFF;
    font-weight: 500;
}

QProgressBar::chunk {
    background-color: #50C8BD;
    border-radius: 4px;
}

/* Стили для слайдеров */
QSlider::groove:horizontal {
    border: 1px solid #00F0C0;
    height: 4px;
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0,
                stop:0 #00F0C0, stop:0.5 #0090FF, stop:1 #00F0C0);
    border-radius: 2px;
}

QSlider::handle:horizontal {
    background: qradialgradient(cx:0.5, cy:0.5, radius:0.8, fx:0.5, fy:0.5,
                stop:0 #FFFFFF, stop:1 #00F0C0);
    border: 1px solid #00F0C0;
    width: 14px;
    height: 14px;
    margin: -5px 0;
    border-radius: 7px;
}

QSlider::handle:horizontal:hover {
    background: #75D2BF;
    border: 1px solid #75D2BF;
}

/************************ Chat Widget ************************/
#ChatWidget QPlainTextEdit {
    border: 1px solid rgba(123, 89, 54, 0.6);
    border-radius: 8px;
    padding: 8px;
    background-color: #252526;
    color: #E0E0E0;
    selection-background-color: rgba(80, 200, 189, 0.3);
}

#ChatWidget QTextBrowser {
    border: 1px solid rgba(123, 89, 54, 0.6);
    border-radius: 8px;
    padding: 10px;
    background-color: #2A2A2A;
    color: #E0E0E0;
}

#ChatWidget QToolButton {
    background-color: #50C8BD;
    color: #000000; /* Темный текст на ярком фоне для контраста */
    border: none;
    border-radius: 6px;
    padding: 6px;
    margin: 2px;
}

#ChatWidget QToolButton:hover {
    background-color: #75D2BF;
}

/* Стили для сообщений в чате */
#ChatWidget QLabel[sender="user"] {
    background-color: #3a546e; /* Синеватый фон */
    border-radius: 10px;
    padding: 8px;
    margin: 2px 20px 2px 2px;
    color: #E0E0E0; /* Светлый текст */
}

#ChatWidget QLabel[sender="assistant"] {
    background-color: #375e44; /* Зеленоватый фон */
    border-radius: 10px;
    padding: 8px;
    margin: 2px 2px 2px 20px;
    color: #E0E0E0; /* Светлый текст */
}

#ChatWidget QLabel[sender="system"] {
    background-color: #3A3A3A;
    border-radius: 5px;
    padding: 4px;
    margin: 2px 50px;
    color: #B0B0B0; /* Серый текст */
    font-style: italic;
}

/************************ Code Editor ************************/
CodeEditor {
    font-family: "JetBrains Mono", "Consolas", "Courier New", monospace;
    background-color: #252526;
    color: #E0E0E0; /* Светлый текст */
    selection-background-color: rgba(80, 200, 189, 0.3);
    selection-color: #E0E0E0;
    border: 1px solid rgba(123, 89, 54, 0.6);
    border-radius: 8px;
    padding: 5px;
}

/* Линия подсветки текущей строки */
CodeEditor[highlightCurrentLine="true"] {
    background-color: #2A2A2A;
}
