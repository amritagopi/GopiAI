:root {
    /* Base Colors */
    --primary: #3498DB;
    --primary-variant: #2980B9;
    --secondary: #1ABC9C;
    --accent: #E74C3C;
    --background: #2D2D2D;
    --surface: #3D3D3D;
    --background-variant: #252525;
    --on-primary: #FFFFFF;
    --on-secondary: #FFFFFF;
    --on-background: #FFFFFF;
    --on-surface: #E0E0E0;
    --error: #E74C3C;
    --warning: #F39C12;
    --success: #2ECC71;
    --info: #3498DB;
    --border: #444444;
    --divider: #555555;
    --disabled: #777777;
    --hover: #505050;
    --selected: #264F78;

    /* Component Colors */
    --button-background: #252525; /* from @background-variant */
    --button-text: #FFFFFF; /* from @on-background */
    --button-hover: #3498DB; /* from @primary */
    --button-hover-text: #FFFFFF; /* from @on-primary */
    --button-pressed: #2980B9; /* from @primary-variant */
    --button-disabled: #777777; /* from @disabled */
