    --input-text: #E0E0E0; /* from @on-surface */
    --input-border: #444444; /* from @border */
    --input-focus-border: #3498DB; /* from @primary */
    --tab-background: #252525; /* from @background-variant */
    --tab-text: #FFFFFF; /* from @on-background */
    --tab-selected: #3498DB; /* from @primary */
    --tab-selected-text: #FFFFFF; /* from @on-primary */
    --dock-title: #252525; /* from @background-variant */
    --dock-border: #444444; /* from @border */
    --menu-background: #2D2D2D; /* from @background */
    --menu-text: #FFFFFF; /* from @on-background */
    --menu-hover: #3498DB; /* from @primary */
    --menu-hover-text: #FFFFFF; /* from @on-primary */
    --terminal-background: #1E1E1E;
    --terminal-text: #E0E0E0;
    --scrollbar-background: #2D2D2D; /* from @background */
    --scrollbar-handle: #252525; /* from @background-variant */
    --scrollbar-hover: #3498DB; /* from @primary */
}

