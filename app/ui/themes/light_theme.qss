/* Базовый фон */
QWidget {
    background-color: #B6F2EC;
    color: #402826;
    font-family: 'Segoe UI', sans-serif;
    font-size: 14px;
}

/* Главное окно */
QMainWindow {
    background-color: #F5F5F5;
    color: #303030;
}

/* Центральный виджет */
QTabWidget {
    background-color: #FFFFFF;
    color: #402826;
}

QTabWidget::pane {
    border: 1px solid #8DC3F2;
    background-color: #FFFFFF;
}

QTabBar::tab {
    background-color: #B6F2EC;
    color: #402826;
    border: 1px solid #8DC3F2;
    border-bottom: none;
    padding: 5px 10px;
    border-top-left-radius: 3px;
    border-top-right-radius: 3px;
}

QTabBar::tab:selected {
    background-color: #7EF2E7;
    color: #402826;
}

QTabBar::tab:hover:!selected {
    background-color: #D97855;
}

/* Кнопки */
QPushButton {
    background-color: #D97855;
    color: #FFFFFF;
    border: 1px solid #8DC3F2;
    border-radius: 4px;
    padding: 5px 10px;
    min-width: 70px;
    text-align: center;
}
QPushButton:hover {
    background-color: #8C4C35;
    border: 1px solid #7EF2E7;
}
QPushButton:pressed {
    background-color: #402826;
    border: 1px solid #7EF2E7;
}

/* Поля ввода */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: #FFFFFF;
    color: #402826;
    border: 1px solid #7EF2E7;
    border-radius: 4px;
    padding: 4px;
}

/* Метки */
QLabel {
    color: #402826;
}

/* Скроллбар */
QScrollBar:vertical {
    background-color: #E8E8E8;
    width: 10px;
    margin: 0px;
}
QScrollBar::handle:vertical {
    background-color: #8DC3F2;
    border-radius: 4px;
}
QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

/* Комбобокс */
QComboBox {
    background-color: #FFFFFF;
    color: #402826;
    border: 1px solid #8DC3F2;
    border-radius: 4px;
    padding: 4px;
}
QComboBox QAbstractItemView {
    background-color: #FFFFFF;
    selection-background-color: #D97855;
    color: #402826;
}

/* Меню */
QMenuBar {
    background-color: #B6F2EC;
    color: #402826;
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 8px;
}

QMenuBar::item:selected {
    background-color: #7EF2E7;
    color: #402826;
}

QMenu {
    background-color: #B6F2EC;
    color: #402826;
    border: 1px solid #8DC3F2;
}

QMenu::item {
    padding: 5px 20px 5px 20px;
}

QMenu::item:selected {
    background-color: #7EF2E7;
    color: #402826;
}

/* Доки */
QDockWidget {
    background-color: #B6F2EC;
    color: #402826;
}

QDockWidget::title {
    background-color: #7EF2E7;
    padding-left: 5px;
    padding-top: 3px;
}

/* Панель инструментов */
QToolBar {
    background-color: #B6F2EC;
    border: none;
    spacing: 3px;
}

QToolBar::separator {
    width: 1px;
    background-color: #C0C0C0;
    margin: 3px 5px;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 3px;
    padding: 3px;
}

QToolButton:hover {
    background-color: #7EF2E7;
    border: 1px solid #8DC3F2;
}

QToolButton:pressed {
    background-color: #D97855;
}

/* Чат */
QTextBrowser {
    background-color: #FFFFFF;
    color: #303030;
}

/* Статус бар */
QStatusBar {
    background-color: #9BE9E9;
    color: #402826;
    border-top: 1px solid #8DC3F2;
}
