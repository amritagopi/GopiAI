/* Темная тема для GopiAI */

/* CSS-переменные для темной темы */
:root {
    --accent-color: #3498DB;
    --accent-color-pressed: #2980B9;
    --bg-primary: #2D2D2D;
    --bg-secondary: #3D3D3D;
    --bg-tertiary: #555555;
    --border-color: #444444;
    --fg-primary: #FFFFFF;
    --fg-secondary: #E0E0E0;
    --selection-bg: #264F78;
    --terminal-bg: #1E1E1E;
}

/* Основные стили */
QWidget {
    background-color: var(--bg-primary);
    color: var(--fg-primary);
}

/* Кнопки */
QPushButton {
    background-color: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    border-radius: 4px;
    color: var(--fg-primary);
    padding: 6px 12px;
}

QPushButton:hover {
    background-color: var(--accent-color);
}

QPushButton:pressed {
    background-color: var(--accent-color-pressed);
}

/* Поля ввода */
QLineEdit, QTextEdit, QPlainTextEdit {
    background-color: var(--bg-secondary);
    border: 1px solid var(--bg-tertiary);
    border-radius: 4px;
    color: var(--fg-primary);
    padding: 4px;
}

/* Вкладки */
QTabWidget::pane {
    border: 1px solid var(--border-color);
}

QTabBar::tab {
    background-color: var(--bg-tertiary);
    border-top-left-radius: 4px;
    border-top-right-radius: 4px;
    color: var(--fg-primary);
    margin-right: 2px;
    padding: 6px 12px;
}

QTabBar::tab:selected {
    background-color: var(--accent-color);
}

/* Полосы прокрутки */
QScrollBar:vertical {
    background-color: var(--bg-primary);
    margin: 0px;
    width: 12px;
}

QScrollBar::handle:vertical {
    background-color: var(--bg-tertiary);
    border-radius: 6px;
    min-height: 20px;
}

QScrollBar::handle:vertical:hover {
    background-color: var(--accent-color);
}

QScrollBar:horizontal {
    background-color: var(--bg-primary);
    height: 12px;
    margin: 0px;
}

QScrollBar::handle:horizontal {
    background-color: var(--bg-tertiary);
    border-radius: 6px;
    min-width: 20px;
}

QScrollBar::handle:horizontal:hover {
    background-color: var(--accent-color);
}

/* Списки и таблицы */
QListView, QTreeView, QTableView {
    background-color: var(--bg-secondary);
    border: 1px solid var(--border-color);
    color: var(--fg-primary);
    selection-background-color: var(--accent-color);
    selection-color: var(--fg-primary);
}

QHeaderView::section {
    background-color: var(--bg-tertiary);
    border: 1px solid var(--border-color);
    color: var(--fg-primary);
    padding: 4px;
}

/* Меню */
QMenuBar {
    background-color: var(--bg-primary);
    border-bottom: 1px solid var(--border-color);
    color: var(--fg-primary);
}

QMenuBar::item:selected {
    background-color: var(--accent-color);
}

QMenu {
    background-color: var(--bg-primary);
    border: 1px solid var(--border-color);
    color: var(--fg-primary);
}

QMenu::item:selected {
    background-color: var(--accent-color);
}

/* Док-виджеты */
QDockWidget {
    titlebar-close-icon: url(:/icons/close_dark.png);
    titlebar-normal-icon: url(:/icons/undock_dark.png);
}

QDockWidget::title {
    background-color: var(--bg-tertiary);
    padding-left: 5px;
    padding-top: 2px;
}

/* Терминал */
QPlainTextEdit#terminal {
    background-color: var(--terminal-bg);
    color: var(--fg-secondary);
    font-family: "Consolas", "Courier New", monospace;
}

/* Редактор кода */
QPlainTextEdit#codeEditor {
    background-color: var(--bg-secondary);
    color: var(--fg-primary);
    font-family: "Consolas", "Courier New", monospace;
    selection-background-color: var(--selection-bg);
    selection-color: var(--fg-primary);
}

/* Строка состояния */
QStatusBar {
    background-color: var(--bg-tertiary);
    color: var(--fg-primary);
}

QStatusBar::item {
    border: none;
}

/* Панель инструментов */
QToolBar {
    background-color: var(--bg-primary);
    border-bottom: 1px solid var(--border-color);
    spacing: 3px;
}

QToolButton {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 4px;
    padding: 3px;
}

QToolButton:hover {
    background-color: var(--accent-color);
    border: 1px solid var(--border-color);
}

QToolButton:pressed {
    background-color: var(--accent-color-pressed);
}

